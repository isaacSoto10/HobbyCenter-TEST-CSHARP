@{
    ViewData["Title"] = "Hobby Details";
}
@model Hobby

<div class="headder">
    <h1> @Model.Name </h1>
    <br>
    <br>
    <h3>Description:</h3>
    <br>
    <p> @Model.Description </p>
    <br>
    <hr>

</div>
<div class="leftside">
    <h3> All the @Model.Name Enthusiasts:</h3>
    <div class="box">
        <table>
        @foreach(Enthusiast liker in Model.HobbyLiker)
            {
                <tr>
                    <td> @liker.User.FirstName @liker.User.LastName </td>
                </tr>
            }
        </table>
    </div>
    <hr>
</div>
<div class="rightside">
    <h3>Click below to be an Enthusiast</h3>
    
    <div class="button">
        <a href="/AddHobby/@Model.HobbyId">| Add to Hobbies |</a>
    </div>
    <hr>
</div>